<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/civ_search_icon"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white_e"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写验证信息"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/x8"
            android:background="@color/white_f">

            <EditText
                android:id="@+id/et_add_send_verfiy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_23" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/x30"
            android:background="@color/white_f">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/x8"
                android:gravity="center_vertical"
                android:text="备注"
                android:textColor="@color/black_23"
                android:textSize="@dimen/x20" />

            <EditText
                android:id="@+id/et_add_send_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/x120"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="@color/black_23"
                android:textSize="@dimen/x20" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white_f">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/x8"
                android:gravity="center_vertical"
                android:text="分组"
                android:textColor="@color/black_23"
                android:textSize="@dimen/x20" />

            <TextView
                android:id="@+id/tv_add_send_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/x120"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="默认"
                android:textColor="@color/black_23"
                android:textSize="@dimen/x20" />

            <ImageView
                android:id="@+id/iv_add_send_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x8"
                android:src="@mipmap/icon_goto" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/line" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_send"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x1"
        android:background="@color/green_a"
        android:text="发送"
        android:textColor="@color/white_f"
        android:textSize="@dimen/x20" />
</RelativeLayout>