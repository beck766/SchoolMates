<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginTop="21dp">

            <TextView
                android:id="@+id/tv_register_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x22"
                android:text="昵称:"
                android:textColor="@color/black_23"
                android:textSize="@dimen/x18" />

            <EditText
                android:id="@+id/et_register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x28"
                android:layout_toEndOf="@+id/tv_register_name"
                android:maxLength="10"
                android:paddingBottom="20dp"
                android:textSize="@dimen/x18" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginTop="21dp">

            <TextView
                android:id="@+id/tv_register_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x8"
                android:text="老同学号:"
                android:textColor="@color/black_23"
                android:textSize="@dimen/x18" />

            <EditText
                android:id="@+id/et_register_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x8"
                android:layout_toEndOf="@+id/tv_register_account"
                android:maxLength="10"
                android:paddingBottom="20dp"
                android:textSize="@dimen/x18" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_account_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x200"
            android:layout_marginTop="@dimen/x16"
            android:text="该账号已有人使用！"
            android:textColor="#f74051"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginTop="21dp">

            <EditText
                android:id="@+id/register_pwd_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x8"
                android:hint="请设置您的6~16位密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="20dp"
                android:textSize="@dimen/x18" />

            <CheckBox
                android:id="@+id/register_pwd_reset_visibility"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_visibility_n"
                android:button="@null" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/register_pwd_ensure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x8"
                android:hint="请再次确认密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="20dp"
                android:textSize="@dimen/x18" />

            <CheckBox
                android:id="@+id/register_pwd_ensure_visibility"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="@dimen/x8"
                android:background="@drawable/ic_visibility_n"
                android:button="@null" />

        </RelativeLayout>

        <TextView
            android:id="@+id/pwd_error_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x36"
            android:layout_marginTop="@dimen/x16"
            android:text="两次密码不一致！请重新确认输入"
            android:textColor="#f74051"
            android:visibility="gone" />

        <Button
            android:id="@+id/register_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x18"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginTop="@dimen/x18"
            android:background="@drawable/btn_login"
            android:enabled="false"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="@dimen/x16" />

    </LinearLayout>
</LinearLayout>