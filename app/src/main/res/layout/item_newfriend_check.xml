<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item_newfriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10">

        <com.beck.helloschoolmate.view.widget.CircleImageView
            android:id="@+id/civ_new_friend_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/x8"
            android:src="@mipmap/user_icon" />

        <LinearLayout
            android:id="@+id/ll_new_friend_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x8"
            android:layout_toEndOf="@+id/civ_new_friend_icon"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_new_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="林某某"
                android:textColor="@color/black_f"
                android:gravity="center_vertical"
                android:textSize="@dimen/x18" />

            <TextView
                android:id="@+id/tv_new_friend_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="18"
                android:singleLine="true"
                android:text="顺风狂小狗，逆风简自豪，绝境UZI"
                android:gravity="center_vertical"
                android:textColor="@color/black_33"
                android:textSize="@dimen/x16" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_new_friend_agreed"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x35"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x15"
            android:background="@color/green_a"
            android:text="接受"
            android:textColor="@color/white_f" />

        <TextView
            android:id="@+id/tv_new_friend_state"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x25"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x15"
            android:gravity="center_vertical"
            android:text="已同意"
            android:textColor="@color/black_33"
            android:visibility="gone" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/black_33"
        android:layout_below="@+id/rl_item_newfriend"
        android:layout_marginTop="@dimen/x5"
        />
</RelativeLayout>